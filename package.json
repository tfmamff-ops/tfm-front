{
  "name": "tfm-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:next": "next dev --hostname 0.0.0.0 --turbopack -p 3000",
    "dev:mock": "json-server --watch mocks/db.json --port 4000 --delay 300 --routes mocks/routes.json --host 0.0.0.0",
    "dev": "run-s docker:up dev:start",
    "dev:start": "concurrently -n NEXT,MOCK -c auto \"pnpm dev:next\" \"pnpm dev:mock\"",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "prisma:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-image-crop": "^11.0.10",
    "react-webcam": "^7.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "json-server": "0.17.4",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.17.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
